<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.health.mapper.MemberMapper">
    <select id="findByTelephone" parameterType="string" resultType="com.health.domain.pojo.Member">
        select * from t_member where phoneNumber = #{telephone}
    </select>

    <insert id="add" parameterType="com.health.domain.pojo.Member" useGeneratedKeys="true" keyProperty="id">
        insert into t_member(phoneNumber, regTime, password)
        values (#{phoneNumber}, #{regTime}, #{password})
    </insert>
</mapper>